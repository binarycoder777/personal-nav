---
import { Icon } from "astro-icon/components";

const categories = [
  { name: '全部', icon: 'lucide:grid' },
  { name: '设计资源', icon: 'lucide:palette' },
  { name: '开发工具', icon: 'lucide:code' },
  { name: '学习教程', icon: 'lucide:book-open' },
  { name: '素材库', icon: 'lucide:image' },
  { name: '插件', icon: 'lucide:puzzle' }
];
---

<div class="mt-20 mb-8">
  <div class="flex flex-col space-y-6">
    <div class="flex items-center justify-between">
      <h1 class="text-2xl font-bold text-gray-900">优质资源分享</h1>
      <div class="relative">
        <input
          type="text"
          placeholder="搜索资源..."
          class="pl-10 pr-4 py-2 rounded-lg border border-gray-200 focus:border-purple-500 focus:ring-1 focus:ring-purple-500 outline-none w-64"
        />
        <Icon
          name="lucide:search"
          class="w-5 h-5 text-gray-400 absolute left-3 top-1/2 transform -translate-y-1/2"
        />
      </div>
    </div>
    
    <div class="flex space-x-2 overflow-x-auto pb-2">
      {categories.map(category => (
        <button class="px-4 py-2 rounded-lg bg-white border border-gray-200 hover:border-purple-500 hover:text-purple-600 transition-colors duration-200 flex items-center space-x-2 min-w-max">
          <Icon name={category.icon} class="w-4 h-4" />
          <span>{category.name}</span>
        </button>
      ))}
    </div>
  </div>
</div> 